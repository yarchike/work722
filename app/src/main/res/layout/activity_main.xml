<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/number_text"
        android:layout_width="243dp"
        android:layout_height="46dp"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="96dp"
        android:ems="10"
        android:hint="@string/number"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sms_text"
        android:layout_width="242dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/text_sms"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/number_text"
        app:layout_constraintStart_toStartOf="@+id/number_text"
        app:layout_constraintTop_toBottomOf="@+id/number_text" />

    <Button
        android:id="@+id/call_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="156dp"
        android:text="@string/call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sms_text" />

    <Button
        android:id="@+id/sms_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/send_sms"
        app:layout_constraintEnd_toEndOf="@+id/call_btn"
        app:layout_constraintStart_toStartOf="@+id/call_btn"
        app:layout_constraintTop_toBottomOf="@+id/call_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>